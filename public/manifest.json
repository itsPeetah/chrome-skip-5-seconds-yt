{
  "manifest_version": 3,
  "name": "Skip 5 Seconds",
  "version": "1.0",
  "description": "Skip 5 second ads on YouTube",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Click to skip the current 5 second ad",
    "default_icon": {
      "16": "icon/icon_16.png",
      "19": "icon/icon_19.png",
      "38": "icon/icon_38.png",
      "48": "icon/icon_48.png",
      "128": "icon/icon_128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon/icon_16.png",
    "19": "icon/icon_19.png",
    "38": "icon/icon_38.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  }
}
